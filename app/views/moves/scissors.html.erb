<div class="container">
    <table class="table">
        <hr>
          <div class="row">
              <div class="col-md-offset-2 col-md-8">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                  <a class="btn btn-primary" href="../rock" role="button">Play Rock</a>
                  <a class="btn btn-info" href="../paper" role="button">Play Paper</a>
                  <a class="btn btn-primary" href="../scissors" role="button">Play Scissors</a>
                </div>
              </div>
          </div>
        </hr>

        <hr>
          <div class="row">
              <div class="col-md-offset-2 col-md-4 col-xs-6">
                <div class="panel panel-success">
                  <div class="panel-heading">
                    <h3 class="panel-title text-center"><%=@human_move%></h3>
                  </div>
                  <div class="panel-body">
                    <img src="../assets/images/scissors.png" class="img-responsive">
                  </div>
                </div>
              </div>
              <div class="col-md-4 col-xs-6">
                <div class="panel panel-danger">
                  <div class="panel-heading">
                    <h3 class="panel-title text-center"><%=@computer_move%></h3>
                  </div>
                  <div class="panel-body">
                    <img src="../assets/images/<%=@computer_move.downcase%>.png" class="img-responsive">
                  </div>
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-2"></div>
              <div class="col-md-8">
                <div class="well text-center">
                  <h1>
                    <span class="label label-<%= @formatting %> btn-lg"><%= @outcome%></span>
                  </h1>
                </div>

              </div>
              <div class="col-md-2"></div>
          </div>


        </hr>

    </table>



</div>
